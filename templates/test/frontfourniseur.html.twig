{% extends 'test/index.html.twig' %}
{% block emna %}
    <div class="container-fluid py-5">
        <div class="container py-5">
            <div class="text-center mx-auto mb-5" style="max-width: 500px;">
                <h1 class="display-5">Nos Materials</h1>
                <hr class="w-25 mx-auto text-primary" style="opacity: 1;">
            </div>
            <div class="row g-3">
                {% for materiel in materials %}
                    <div class="col-lg-4 col-md-6">
                        <div class="team-item">
                            <img class="img-fluid w-100" src="{{ asset('uploads/' ~ materiel.image) }}" alt="">
                            <div class="team-text">
                                <div class="team-social">
                                    <a class="btn btn-lg btn-secondary btn-lg-square rounded-circle me-2" href="#"><i class="fab fa-twitter"></i></a>
                                    <a class="btn btn-lg btn-secondary btn-lg-square rounded-circle me-2" href="#"><i class="fab fa-facebook-f"></i></a>
                                    <a class="btn btn-lg btn-secondary btn-lg-square rounded-circle me-2" href="#"><i class="fab fa-linkedin-in"></i></a>
                                </div>
                                <div class="mt-auto mb-3">
                                    <h4 class="mb-1">{{ materiel.nomm }}</h4>
                                    <span class="text-uppercase">{{ materiel.prix }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <center><a href="{{ path('app_addfrontmaterial') }}" class="btn btn-secondary rounded-pill py-md-3 px-md-5 mt-4">Add New Material</a></center>




{% endblock %}
